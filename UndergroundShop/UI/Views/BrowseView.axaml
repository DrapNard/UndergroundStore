<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="clr-namespace:UndergroundShop.ViewModels"
    x:Class="UndergroundShop.Views.BrowseView"
    x:DataType="vm:BrowseViewModel">

	<ScrollViewer>
		<StackPanel>
			<TextBlock Text="Latest News" FontSize="20" Margin="10"/>
			<!-- Add your news content here -->
			<TextBlock Text="New Games" FontSize="20" Margin="10,10,0,0"/>
			<!-- Add new games content here -->
			<TextBlock Text="Installed Items" FontSize="20" Margin="10,10,0,0"/>
			<!-- Add installed items content here -->
		</StackPanel>
	</ScrollViewer>
</UserControl>
